<div class="form-group row">
  <%= f.label :"犬種画像", class: "col-sm-2" %>
  <%= f.attachment_field :dog_image, class: "col-sm-6" %>
</div>

<div class="form-group row">
  <%= f.label :"犬種名", class: "col-sm-2"%>
  <%= f.text_field :dog_name, class: "col-sm-6 form-control-static" %>
</div>

<div class="form-group row">
  <%= f.label :"犬種説明", class: "align-top col-sm-2" %>
  <%= f.text_area :dog_introduction, class: "col-sm-6" %>
</div>

<div class="form-group row">
  <%= f.label :"ジャンル", class: "col-sm-2" %>
  <%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --", class: "col-sm-6") %>
</div>